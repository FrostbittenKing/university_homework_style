}

\newenvironment{itemizepages}{
  \begin{itemize}
    \let\originalitem\item
    \renewcommand\item[3][]{\originalitem[##1]{##3} ({$##2$ page})}
    \newcommand\itempl[3][]{\originalitem[##1]{##3} ({$##2$ pages})}
  }{
  \end{itemize}
  \let\item\originalitem
}